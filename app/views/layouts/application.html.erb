

<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>GB's forum</title>

    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to('所有文章', root_path, {class: "nav-link"}) %>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to('發表文章', new_post_path, {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('Feeds', feeds_path, {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('個人檔案', user_path(current_user), {class: "nav-link"}) %>
            </li>
            <% if current_user.role == "admin"%>
              <li class="nav-item">
                <%= link_to 'Admin後台', admin_posts_path, {class: "nav-link"} %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to('登出', destroy_user_session_path, {method: :delete, class: "nav-link"}) %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to('註冊', new_user_registration_path, {class: "nav-link"}) %>
            </li>
            <li class="nav-item">
              <%= link_to('登入', new_user_session_path, {class: "nav-link"}) %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>


    <div class="container-fluid">
      <%= yield %>
    </div>

      <div class="footer text-center">

      </div>
  </body>
</html>
