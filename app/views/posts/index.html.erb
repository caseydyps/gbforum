<div class="container">
  <h1>GB's Forum</h1>
  <hr>
  <div>
    <button>
      <%= link_to 'new',new_post_path %>
    </button>
  </div>

  <table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th>title</th>
      <th>created_at</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.created_at%></td>
      <td>
        <%= link_to 'Show', post_path(p) %>
        <%= link_to 'Edit', edit_post_path(p) %>
        <%= link_to 'Delete', post_path(p), method: :delete, data: { confirm: "Sure?"} %>
      </td>
    </tr>
  </tbody>
  <%end%>
</table>
</div>
