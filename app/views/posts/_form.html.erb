<%= form_for  [@post] do |p| %>
  <div class="form-group">
    <%= p.label :title, "Title" %>
    <%= p.text_field :title , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= p.label :content, "Content" %>
    <%= p.text_area :content , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= p.label :image, "Upload image" %>
    <%= image_tag @post.image,width:'250px' if @post.image? %>
    <%= p.file_field :image %>
  </div>

  <%= p.submit %>
<% end %>
